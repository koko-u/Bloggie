@page
@using Bloggie.Web.Pages.Admin.Blogs
@model AddModel
@{
    ViewData["Title"] = "New Blog";
}

<div class=" bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Add New Blog Post</h2>
    </div>
</div>

<div class="mt-4">
    <div class="container">
        <form method="POST">
            <div class="row mb-3">
                <label asp-for="AddBlogPost.Heading" class="col-sm-2 col-form-label">Heading</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.Heading">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.PageTitle" class="col-sm-2 col-form-label">Page Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.PageTitle">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.Content" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" asp-for="AddBlogPost.Content"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.ShortDescription" class="col-sm-2 col-form-label">Short Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.ShortDescription">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.FeaturedImageUrl" class="col-sm-2 col-form-label">Featured Image Url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.FeaturedImageUrl">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.UrlHandle" class="col-sm-2 col-form-label">Url Handle</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.UrlHandle">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.PublishedOn" class="col-sm-2 col-form-label">Published On</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="AddBlogPost.PublishedOn">
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AddBlogPost.Author" class="col-sm-2 col-form-label">Author</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="AddBlogPost.Author">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="AddBlogPost.IsVisible">
                        <label class="form-check-label" asp-for="AddBlogPost.IsVisible">
                            Is Visible
                        </label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Blog Post</button>
        </form>

    </div>

</div>
